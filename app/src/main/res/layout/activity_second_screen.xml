<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondScreenActivity"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/layout_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:background="#ffffff">
            <ImageView
                android:id="@+id/imageView_feed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_home_black"
                android:layout_centerInParent="true"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/com_facebook_button_background_color_disabled" />

        <RelativeLayout
            android:id="@+id/layout_my_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:background="#ffffff">
            <ImageView
                android:id="@+id/imageView_my_location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_my_location_black"
                android:layout_centerInParent="true"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/com_facebook_button_background_color_disabled" />

        <RelativeLayout
            android:id="@+id/layout_messenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:background="#ffffff">
            <ImageView
                android:id="@+id/imageView_messenger"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_message_black"
                android:layout_centerInParent="true"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>
        </RelativeLayout>

        <!--
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/com_facebook_button_background_color_disabled" />

        <RelativeLayout
            android:id="@+id/layout_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:background="#ffffff">
            <ImageView
                android:id="@+id/imageView_find"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_find"
                android:layout_centerInParent="true"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>
        </RelativeLayout> -->
    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/com_facebook_button_background_color_disabled" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/frameLayout_secondActivity">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_chat_writeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chat_write_message"
            android:layout_gravity="bottom|right"
            android:layout_margin="30dp"
            app:fabSize="normal"
            android:clickable="true"
            />
    </FrameLayout>

</LinearLayout>